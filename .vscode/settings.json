{
	"workbench.iconTheme": "material-icon-theme",
	"workbench.editor.highlightModifiedTabs": true,
	"explorer.autoReveal": false,
	"explorer.openEditors.visible": 1,
	"git.autofetch": true,
	"git.autofetchPeriod": 120,
	"diffEditor.ignoreTrimWhitespace": false,
	"editor.fontWeight": "500",
	"editor.renderWhitespace": "all",
	"editor.wordWrap": "on",
	"editor.smoothScrolling": true,
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"[markdown]":
	{
		"editor.insertSpaces": true,
		"files.trimTrailingWhitespace": false
	},
	"[python]":
	{
		"editor.defaultFormatter": "ms-python.black-formatter",
		"editor.formatOnSave": true,
		"editor.insertSpaces": true,
		"editor.tabSize": 4
	},
	"[yml]":
	{
		"editor.formatOnSave": true,
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"files.eol": "\n",
	"files.trimTrailingWhitespace": true,
	"files.associations":
	{
		"*.env": "dotenv",
		"*.env.*": "dotenv",
		"*.json.example": "json",
		"requirements*.txt": "pip-requirements",
		"*Dockerfile*": "dockerfile",
		".dockerignore": "ignore",
		"*.py.bak": "python"
	},
	"files.watcherExclude":
	{
		"**/.git/**": true,
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/.svn/**": true,
		"**/.hg/**": true,
		"**/.hg/store/**": true,
		"**/CVS/**": true,
		"**/node_modules/*/**": true,
		"**/bower_components/**": true,
		"**/.vscode-server/**": true,
		"**/.idea/**": true,
		"**/env/**": true,
		"**/venv/**": true,
		"**/envs/**": true,
		"**/__pycache__/**": true,
		"**/.ipynb_checkpoints/**": true,
		"**/dist/**": true,
		"**/sdist/**": true,
		"**/build/**": true,
		"**/builds/**": true,
		"**/log/**": true,
		"**/logs/**": true,
		"**/backup/**": true,
		"**/backups/**": true,
		"**/archive/**": true,
		"**/data/**": true,
		"**/dataset/**": true,
		"**/datasets/**": true,
		"**/tmp/**": true,
		"**/*.pyc": true,
		"**/*.log": true,
		"**/*.out": true,
		"**/*.bak": true,
		"**/.bak.*": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true
	},
	"files.exclude":
	{
		"**/.git": false,
		"**/.svn": false,
		"**/.hg": false,
		"**/CVS": false,
		"**/.DS_Store": false,
		"**/Thumbs.db": false
	},
	"search.exclude":
	{
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/node_modules": true,
		"**/bower_components": true,
		"**/*.code-search": true,
		"**/.vscode": true,
		"**/.vscode-server": true,
		"**/.idea": true,
		"**/env": true,
		"**/venv": true,
		"**/envs": true,
		"**/__pycache__": true,
		"**/.ipynb_checkpoints": true,
		"**/dist": true,
		"**/sdist": true,
		"**/build": true,
		"**/builds": true,
		"**/log": true,
		"**/logs": true,
		"**/backup": true,
		"**/backups": true,
		"**/archive": true,
		"**/data": true,
		"**/dataset": true,
		"**/datasets": true,
		"**/tmp": true,
		"**/*.pyc": true,
		"**/*.log": true,
		"**/*.out": true,
		"**/*.bak": true,
		"**/.bak.*": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true
	},
	"python.languageServer": "Pylance",
	"git-graph.maxDepthOfRepoSearch": 4,
	"python.testing.unittestEnabled": false,
	"python.testing.pytestEnabled": true
}
